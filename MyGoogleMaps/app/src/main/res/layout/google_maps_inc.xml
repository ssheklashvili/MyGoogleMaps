    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6EEDF"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/flower_icon"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:textColor="@color/green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WHAT'S NEW"
                android:textSize="@dimen/block_text_head_size"/>
            <TextView
                android:textColor="@color/green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:text="@string/block_text"/>
        </LinearLayout>
    </LinearLayout>



        <ImageView
            android:layout_width="@dimen/watch_read_dimention"
            android:layout_height="@dimen/watch_read_dimention"
            android:src="@drawable/ic_watch"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/watch_read_dimention"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/read_more"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/watch_read_dimention"
            android:textSize="15dp"
            android:textColor="@color/green" />



    <HorizontalScrollView
        android:id="@+id/horizontal_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/horizontal_scroll_image_width"
                android:layout_height="@dimen/horizontal_scroll_image_height"
                android:src="@drawable/album1"
                android:layout_marginEnd="@dimen/horizontal_scroll_margin_end"
                android:layout_marginRight="@dimen/horizontal_scroll_margin_end"/>

            <ImageView
                android:layout_width="@dimen/horizontal_scroll_image_width"
                android:layout_height="@dimen/horizontal_scroll_image_height"
                android:src="@drawable/album2"
                android:layout_marginEnd="@dimen/horizontal_scroll_margin_end"
                android:layout_marginRight="@dimen/horizontal_scroll_margin_end"/>

            <ImageView
                android:layout_width="@dimen/horizontal_scroll_image_width"
                android:layout_height="@dimen/horizontal_scroll_image_height"
                android:src="@drawable/album3"
                android:layout_marginEnd="@dimen/horizontal_scroll_margin_end"
                android:layout_marginRight="@dimen/horizontal_scroll_margin_end"/>

            <ImageView
                android:layout_width="@dimen/horizontal_scroll_image_width"
                android:layout_height="@dimen/horizontal_scroll_image_height"
                android:src="@drawable/album4"
                android:layout_marginEnd="@dimen/horizontal_scroll_margin_end"
                android:layout_marginRight="@dimen/horizontal_scroll_margin_end"/>

            <ImageView
                android:layout_width="@dimen/horizontal_scroll_image_width"
                android:layout_height="@dimen/horizontal_scroll_image_height"
                android:src="@drawable/album5"
                android:layout_marginEnd="@dimen/horizontal_scroll_margin_end"
                android:layout_marginRight="@dimen/horizontal_scroll_margin_end"/>

            <ImageView
                android:layout_width="@dimen/horizontal_scroll_image_width"
                android:layout_height="@dimen/horizontal_scroll_image_height"
                android:src="@drawable/album6"
                android:layout_marginEnd="@dimen/horizontal_scroll_margin_end"
                android:layout_marginRight="@dimen/horizontal_scroll_margin_end"/>

        </LinearLayout>

    </HorizontalScrollView>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/account_profile_icon"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/user_prof"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_this_app"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>


    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:numStars="0"
        android:rating="2.5"
        android:stepSize="0.5"
        android:layout_gravity="center"
        android:progressTint="@color/green"
        android:id="@+id/ratingBar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/rewievs_text"
        android:textStyle="italic"
        android:textSize="13dp"
        />

    <View
        android:layout_width="@dimen/line_width"
        android:layout_height="@dimen/line_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/line_margin_top"
        android:layout_marginBottom="@dimen/line_margin_bottom"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/raiting_val"
            android:textSize="@dimen/big_raiting_val_size"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RatingBar
            android:layout_marginTop="20dp"
            android:layout_width = "wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.1"
            android:rating="4.5"
            android:isIndicator="true"
            android:progressTint="@color/black"
            android:paddingLeft="0dp"
            android:layout_marginLeft="0dp"
            style="?android:attr/ratingBarStyleSmall"
            />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="@string/highlight_review_number"/>


                <ImageView
                    android:layout_width="@dimen/image_layout_width"
                    android:layout_height="@dimen/image_layout_width"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_person"/>


                </LinearLayout>


            

    </LinearLayout>

        <ImageView
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:src="@drawable/graph_bar"
            android:scaleType="fitXY"/>
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/review_highlights"
        android:textSize="15dp"
        android:textColor="@color/darkgrey"
        android:gravity="center|center_horizontal"
        android:layout_marginTop="30dp"/>

</LinearLayout>
